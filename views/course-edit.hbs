<h1 class="h1_pad">Edit course {{ course.title }}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required value="{{ course.title }}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter name"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required value="{{ course.price }}">
        <label for="price">Course price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
        <input id="img" type="text" name="img" class="validate" required value="{{ course.img }}">
        <label for="img">Photo URL</label>
        <span class="helper-text" data-error="Enter photo URL"></span>
    </div>

    <input type="hidden" name="id" value="{{ course.id }}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn btn-primary">Save changes</button>

</form>

<form action="/courses/remove" method="POST" class="course-form">
    <input type="hidden" name="id" value="{{ course.id }}">
    <input type="hidden" name="_csrf" value="{{csrf}}"> 
    <button class="btn red">Delete course</button>
</form>